@model Fiveplus.Kicker.Models.RegisterViewModel
@{
    ViewBag.Title = "Register a new account";
    
}

@section styles{
    <link rel="stylesheet" href="~/assets/css/page_log_reg_v2.css">
}

<style>
.validation-summary-errors{
    background-color: #f2dede;
    padding: 10px;
    border: 1px solid #D8B1B1;
}
</style>

<div class="breadcrumbs">
    <div class="container margin-top-60">
        <h1 class="pull-left">@ViewBag.Title</h1>
        <ul class="pull-right breadcrumb">
            <li><a href="/">Account</a></li>
            <li class="active"><a href="/Account/register">Register</a></li>
        </ul>
    </div><!--/container-->
</div>

<div class="container content">
    <div class="row">
<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "reg-page", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="reg-header">
            <h2>Already Signed Up? Click <a href="/Account/Login" class="color-green">Sign In</a> to login your account.</h2>
        </div>
        
       @Html.ValidationSummary("", new {@class = "fade in"})


        <label>User Name<span class="color-red">*</span></label>
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control margin-bottom-20" })
        @*@Html.ValidationMessageFor(model => model.UserName, "", new { @class = "note note-error" })*@

        <label>Email Address <span class="color-red">*</span></label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control margin-bottom-20" })

        <div class="row">
            <div class="col-sm-6">
                <label>Password <span class="color-red">*</span></label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control margin-bottom-20" })
            </div>
            <div class="col-sm-6">
                <label>Confirm Password <span class="color-red">*</span></label>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control margin-bottom-20" })
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <label>Country <span class="color-red">*</span></label>
                @Html.TextBoxFor(m => m.Country, new { @class = "form-control margin-bottom-20" })
            </div>
            <div class="col-sm-6">
                <label>State <span class="color-red">*</span></label>
                @Html.TextBoxFor(m => m.State, new { @class = "form-control margin-bottom-20" })
            </div>
        </div>

        <hr>

        <div class="row">
            <div class="col-lg-6">
                <label class="checkbox">
                    @Html.CheckBoxFor(m=>m.TermsConditions)
                    I read <a href="page_terms.html" class="color-green">Terms and Conditions</a>
                </label>
            </div>
            <div class="col-lg-6 text-right">
                <input type="submit" class="btn btn-u btn-block" value="Register" />
            </div>
        </div>

        }
    </div>
    </div>
</div>


