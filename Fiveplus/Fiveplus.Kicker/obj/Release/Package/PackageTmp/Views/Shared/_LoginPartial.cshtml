@using Microsoft.AspNet.Identity


@if (Request.IsAuthenticated)
{
    <li class="dropdown ">
        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown">
            @User.Identity.GetUserName()
        </a>
        <ul class="dropdown-menu">
            @if (Request.IsAuthenticated && User.IsInRole("Administrator"))
            {
                <li>@Html.ActionLink("RolesAdmin", "Index", "RolesAdmin")</li>
                <li>@Html.ActionLink("UsersAdmin", "Index", "UsersAdmin")</li>
            }
          
                <li><b style="margin-left: 10px">My Stuff</b></li>

                <!-- Manage Gigs -->
                <li><a href="/gig/#/create">Create a Gig</a></li>
                <li><a href="/gig/#/myGigs">My Gigs</a></li>
                <li><a href="/profile/activity">Activity</a></li>
                <li><a href="/profile/collected">Favorite Gigs</a></li>
                <li><a href="/settings/@User.Identity.GetUserName()">View Profile</a></li>
         
                <!-- End Manage Gigs -->
                
            <li><b style="margin-left: 10px">Settings</b></li>
            <li><a href="/settings/account">Account</a></li>
            <li><a href="/settings/Profile">Edit Profile</a></li>
            <li><a href="/settings/Profile">Preferences</a></li>
            <li>
                <div style="margin-left: 10px">
                    <p> You are logged in as <b>@User.Identity.GetUserName()</b> <a id="logOut" href="javascript:document.getElementById('logoutForm').submit();">Log Out?</a></p>
                    
                </div>
            </li>
            </ul>
    </li>
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "" }))
    {
        @Html.AntiForgeryToken()
    }

}
else
{

    <li class="">
        <a href="/Account/Login"  >
            Login
        </a>
    </li>

    <li class=" ">
        <a href="/Account/Register">
            Register
        </a>
    </li>



