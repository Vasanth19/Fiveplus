@section styles{
    <link rel="stylesheet" href="~/assets/css/page_log_reg_v2.css">
}

<style>
    .validation-summary-errors {
        background-color: #f2dede;
        padding: 10px;
        border: 1px solid #D8B1B1;
    }
</style>

<div class="breadcrumbs">
    <div class="container margin-top-60">
        <h1 class="pull-left">@ViewBag.Title</h1>
        <ul class="pull-right breadcrumb">
            <li><a href="/">Account</a></li>
            <li class="active"><a href="/Account/register">Register</a></li>
        </ul>
    </div><!--/container-->
</div>

<div class="container content">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">

            @using (Html.BeginForm("ExternalLoginConfirmation", "Account", FormMethod.Post, new { @class = "reg-page", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="reg-header">
                    <h4>Associate your @ViewBag.LoginProvider account with your information.</h4>
                </div>

                @Html.ValidationSummary("", new { @class = "fade in" })


                <label>User Name<span class="color-red">*</span></label>
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control margin-bottom-20" })
                @*@Html.ValidationMessageFor(model => model.UserName, "", new { @class = "note note-error" })*@

                <label>Email Address <span class="color-red">*</span></label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control margin-bottom-20" })

                
                <div class="row">
                    <div class="col-sm-6">
                        <label>Country <span class="color-red">*</span></label>
                        @Html.TextBoxFor(m => m.Country, new { @class = "form-control margin-bottom-20" })
                    </div>
                    <div class="col-sm-6">
                        <label>State <span class="color-red">*</span></label>
                        @Html.TextBoxFor(m => m.State, new { @class = "form-control margin-bottom-20" })
                    </div>
                </div>

                <hr>

                <div class="row">
                    <div class="col-lg-6 text-right">
                        <input type="submit" class="btn btn-u btn-block" value="Register" />
                    </div>
                </div>

            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
