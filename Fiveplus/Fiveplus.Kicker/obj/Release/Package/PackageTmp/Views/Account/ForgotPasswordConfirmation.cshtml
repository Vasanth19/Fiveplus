@{
    ViewBag.Title = "Forgot Password Confirmation";
}


@section styles{
    <link rel="stylesheet" href="~/assets/css/page_log_reg_v2.css">
}

<div class="breadcrumbs">
    <div class="container  margin-top-60">

        <ul class="pull-right breadcrumb">
            <li><a href="/">Home</a></li>
            <li class="active">Forgot Password</li>
        </ul>
    </div>
    <!--/container-->
</div>



<div class="heading heading-v1 margin-bottom-40 margin-top-60">
    <h2>@ViewBag.Title.</h2>
   
    <p>
        <h4> Please check your email to reset your password.</h4>
        Please @Html.ActionLink("Click here to Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
    </p>
</div>



