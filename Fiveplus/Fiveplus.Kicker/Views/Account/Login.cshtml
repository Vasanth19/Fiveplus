@model Fiveplus.Kicker.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
}


@section styles{
<link rel="stylesheet" href="~/assets/css/page_log_reg_v2.css">
<link href="~/assets/css/plugins/brand-buttons/brand-buttons.css" rel="stylesheet" />
<link href="~/assets/css/plugins/brand-buttons/brand-buttons-inversed.css" rel="stylesheet" />
}


<style>
.validation-summary-errors{
    background-color: #f2dede;
    padding: 10px;
    border: 1px solid #D8B1B1;
}
.margin-top-20 {
  margin-top: 20px;
}
</style>


<div class="container content">		
<div class="row margin-top-25">
<div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
    @using (Html.BeginForm("Login", "Account", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "reg-page", role = "form"}))
    {
        @Html.AntiForgeryToken()

        <div class="reg-header">
            <h2>Login to your account</h2>
        </div>
        @Html.ValidationSummary("", new {@class = "fade in margin-bottom-20"})
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            @Html.TextBoxFor(m => m.Email, new {@class = "form-control", @placeholder = "Email"})
        </div>
        @Html.ValidationMessageFor(m => m.Email, "", new {@class = "note note-error pull-right color-red "})
        <div class="input-group margin-top-20">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            @Html.PasswordFor(m => m.Password, new {@class = "form-control", @placeholder = "Password"})
        </div>
        @Html.ValidationMessageFor(m => m.Password, "", new {@class = "note note-error pull-right color-red"})

        <div class="row margin-top-20">
            <div class="col-md-6">
                <label class="checkbox">
                    <input type="checkbox">
                    Stay signed in</label>
            </div>
            <div class="col-md-6">
                <input class="btn-u pull-right" value="Login" type="submit"/>
            </div>
        </div>
    }
  
    <h4 style="text-align: center"> - Or - Login Using</h4>
    @Html.Partial("_ExternalLoginsListPartial", new Fiveplus.Kicker.Models.ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
