@using Microsoft.AspNet.Identity


@if (Request.IsAuthenticated)
{
   
    <li class="dropdown ">
        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown">
            @User.Identity.GetUserName()
        </a>
        <ul class="dropdown-menu">
            @if (Request.IsAuthenticated && User.IsInRole("Administrator"))
            {
                <li>@Html.ActionLink("RolesAdmin", "Index", "RolesAdmin")</li>
                <li>@Html.ActionLink("UsersAdmin", "Index", "UsersAdmin")</li>
            }
            <li><a href="index.html">User Profile</a></li>
            <li><a target="_blank" href="One-Page/index.html">Settings</a></li>
            <li><a id="logOut" href="javascript:document.getElementById('logoutForm').submit();"><b>Log Out</b></a></li>
        </ul>
    </li>
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "" }))
    {
        @Html.AntiForgeryToken()
    }

}
else
{

    <li class="">
        <a href="/Account/Login"  >
            Login
        </a>
    </li>

    <li class=" ">
        <a href="/Account/Register">
            Register
        </a>
    </li>
   

