               <button class="col-md-5 btn btn-facebook">
                              <i class="fa fa-facebook"></i> Facebook
                            </button>
                
              <button class="col-md-offset-1 col-md-5 btn btn-googleplus  ">
                              <i class="fa fa-google-plus"></i> Google
                            </button>
            
        </div>*@

<hr>
    <p>Forget your Password ? @Html.ActionLink("Click Here", "ForgotPassword") To Reset.</p>
    <p>New User? @Html.ActionLink("Click Here", "Register") To Register</p>
    

            
</div>
            
        </div><!--/row-->
    </div>

