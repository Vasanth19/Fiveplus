@section styles{
    <link rel="stylesheet" href="~/assets/css/page_log_reg_v2.css">
}

<style>
    .validation-summary-errors {
        background-color: #f2dede;
        padding: 10px;
        border: 1px solid #D8B1B1;
    }
</style>

<div class="breadcrumbs">
    <div class="container margin-top-60">
        <h1 class="pull-left">@ViewBag.Title</h1>
        <ul class="pull-right breadcrumb">
            <li><a href="/">Account</a></li>
            <li class="active"><a href="/">Reset Password</a></li>
        </ul>
    </div><!--/container-->
</div>

<div class="container content">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">

            @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "reg-page", role = "form" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary("", new { @class = "fade in" })


              
                <label>Email Address <span class="color-red">*</span></label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control margin-bottom-20" })

                <div class="row">
                    <div class="col-sm-6">
                        <label>Password <span class="color-red">*</span></label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control margin-bottom-20" })
                    </div>
                    <div class="col-sm-6">
                        <label>Confirm Password <span class="color-red">*</span></label>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control margin-bottom-20" })
                    </div>
                </div>

                
                <hr>

                <div class="row">
                 <div class="col-xs-offset-6 col-xs-6 text-right pull-right">
                        <input type="submit" class="btn btn-u btn-block pull-right" value="Reset" />
                    </div>
                </div>

            }
        </div>
    </div>
</div>