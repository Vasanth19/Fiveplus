@model Fiveplus.Kicker.Models.AddPhoneNumberViewModel
@{
    ViewBag.Title = "Add Phone Number";
}
<div class="breadcrumbs">
    <div class="container margin-top-60">
        <h1 class="pull-left">Settings</h1>
        <ul class="pull-right breadcrumb">
            <li><a href="/">Home</a></li>
            <li class="active"><a href="/settings">Manage</a></li>
        </ul>
    </div><!--/container-->
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-8 col-sm-offset-1">
            <h5>Add a phone number</h5>
     @using (Html.BeginForm("AddPhoneNumber", "Manage", FormMethod.Post, new { @class = "form-horizontal sky-form", role = "form" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Number, new { @class = "col-sm-2 control-label" })
                    <div class="col-md-10">
                        <label class="input">
                            <i class="icon-prepend fa fa-phone"></i>
                            @Html.TextBoxFor(m => m.Number, new { @class = "form-control", @placeholder="Phone" })
                        </label>
                      
                    </div>
                </div>
            
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Send verification code" />
                    </div>
                </div>
            }

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@section styles
{
    <link href="~/assets/css/plugins/custom-sky-forms.css" rel="stylesheet" />
}
