@model Fiveplus.Kicker.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "sky-form", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })
    <dl class="dl-horizontal">
        <dt>Username</dt>
        <dd>
            <section>
                <label class="input">
                    <i class="icon-append fa fa-user"></i>
                    @Html.TextBoxFor(m => @User.Identity.Name, new { @class = "form-control", @disabled = "true" })
                    <b class="tooltip tooltip-bottom-right">Needed to enter the website</b>
                </label>
            </section>
        </dd>
        <dt>Enter Old password</dt>
        <dd>
            <section>
                <label class="input">
                    <i class="icon-append fa fa-lock"></i>
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", @placeholder = "Old Password" })
                    <b class="tooltip tooltip-bottom-right">Don't forget your password</b>
                </label>
            </section>
        </dd>
        <dt>Enter New password</dt>
        <dd>
            <section>
                <label class="input">
                    <i class="icon-append fa fa-lock"></i>
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @placeholder = "New Password" })
                    <b class="tooltip tooltip-bottom-right">Don't forget your password</b>
                </label>
            </section>
        </dd>
        <dt>Confirm Password</dt>
        <dd>
            <section>
                <label class="input">
                    <i class="icon-append fa fa-lock"></i>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password" })
                    <b class="tooltip tooltip-bottom-right">Don't forget your password</b>
                </label>
            </section>
        </dd>
    </dl>
    <label class="toggle toggle-change"><input type="checkbox" checked="" name="checkbox-toggle-1"><i></i>Remember password</label>
    <br>
    <section>
        <label class="checkbox"><input type="checkbox" id="terms" name="terms"><i></i><a href="#">I agree with the Terms and Conditions</a></label>
    </section>
    <a type="button" href="/settings" class="btn-u btn-u-default">Cancel</a>
    <input class="btn-u" value="Save Changes" type="submit" />

}
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
