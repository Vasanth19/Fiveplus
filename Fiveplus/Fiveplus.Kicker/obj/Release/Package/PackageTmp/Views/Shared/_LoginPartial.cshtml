@using Microsoft.AspNet.Identity


@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "" }))
    {
    @Html.AntiForgeryToken()
    }
    <li class="dropdown animate-hover" data-animate="animated fadeInDown">@Html.ActionLink("Hello " + User.Identity.GetUserName().ToUpper() , "Manage", "Account", routeValues: null, htmlAttributes: new { title = "Manage" })
        <ul class="sub-menu animate-wr animated fadeInDown">
            <li><a href="#"><span class="language">Settings</span></a></li>
            <li><a href="#"><span class="language">Profile</span></a></li>
            @if (Request.IsAuthenticated && User.IsInRole("Administrator")) {
                <li>@Html.ActionLink("RolesAdmin", "Index", "RolesAdmin")</li>
                <li>@Html.ActionLink("UsersAdmin", "Index", "UsersAdmin")</li>
            }
            <li><a id="logOut" href="javascript:document.getElementById('logoutForm').submit();"><span class="fa fa-sign-in"></span>Log Out</a></li>
        </ul>
    </li>

 
}
else
{
    <li><a href="/Account/Login">LOGIN</a></li>
    <li><a href="/Account/Register" >REGISTER</a></li>
   

